<div class="container" style="background-color:#ffffff; border-radius:30px;">
	<h3 class="text-center">Add your products here</h3>

<form action="/product/add" method="post" enctype="multipart/form-data">
  <div class="form-group" style="margin-top:30px;">
    <label for="product_name">Product Name</label>
    <input type="text" name="product_name"class="form-control" id="product_name" placeholder="Enter product name">
  </div>
  <div class="form-group" style="margin-top:30px;">
    <label for="description">Product Description</label>
    <input type="text" name="description"class="form-control" id="description" placeholder="Enter product description">
  </div>
  <div class="form-group">
    <label for="brand">Select type:</label>
    <select class="form-control" id="type" name="type">
      <option value="Mobile">Mobile</option>
      <option value="Pendrive">Pendrive</option>
      <option value="Televison">Televison</option>
      <option value="Camera">Camera</option>
      <option value="Laptop">Laptop</option>
    </select>
  </div>
  <div class="form-group">
	  <label for="brand">Select brand:</label>
	  <select class="form-control" id="brand" name="brand">
	    <option value="Samsung">Samsung</option>
	    <option value="Sony">Sony</option>
	    <option value="LG">LG</option>
	    <option value="Apple">Apple</option>
	    <option value="Lenovo">Lenovo</option>
	  </select>
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="number" class="form-control" id="price" name="price">
  </div>
  <div class="form-group">
	  <label for="brand" >Stock</label>
	  <select class="form-control" id="stock" name="stock">
	    <option value="Available">Available</option>
	    <option value="Out-of-Stock">Out of stock</option>
	  </select>
  </div>
  <div class="form-group">
    <label for="productimage">Product image</label>
    <input type="file" id="productimage" name="product_image">
  </div>
<center>
   <input class="btn btn-primary btn-lg" type="submit"  style="margin-bottom:30px"/>
</center>
</form>


</div>